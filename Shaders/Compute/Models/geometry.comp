struct Material
{
    vec4 emissionColor;
    vec4 baseColor;
    
    int reflectance;
    int roughness;
    int metallic;
};

struct Geometry
{
    mat4 transform;
    Material material;
};

vec3 getPosition(mat4 transform)
{
    return vec3(
        transform[0][3],
        transform[1][3],
        transform[2][3]
    );
}