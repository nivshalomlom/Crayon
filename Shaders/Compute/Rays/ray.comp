struct Ray
{
    vec3 origin;
    vec3 direction;
};

Ray CreateRay(vec3 origin, vec3 direction)
{
    Ray ray;
    ray.origin = origin;
    ray.direction = direction;
    return ray;
}

Ray ReservoirRay(Reservoir reservoir)
{
    return CreateRay(
        reservoir.point_v_itemWeight.xyz,
        normalize(reservoir.point_s_totalWeight.xyz - reservoir.point_v_itemWeight.xyz);
    );
}