#include "../Buffers/geometry.comp"
#include "../Buffers/camera.comp"

struct HitInfo
{
    GEOMETRY_BASE
    RayHit hit;
};

HitInfo createHitInfo(Transform transform, Material material, vec3 position, vec3 normal)
{
    HitInfo info;
    info.transform = transform;
    info.material = material;
    info.hit = createRayHit(position, normal);
    
    return info;
}