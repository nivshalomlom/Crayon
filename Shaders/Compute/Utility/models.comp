struct Impact
{
    vec3 point;
    vec3 normal;
};

Impact CreateImpact(vec3 point, vec3 normal)
{
    Impact impact;
    impact.point = point;
    impact.normal = normal;
    return impact;
}

Impact ReservoirImpact(Reservoir reservoir)
{
    return CreateImpact(
        reservoir.point_s_totalWeight.xyz,
        reservoir.normal_s_depth.xyz
    );
}